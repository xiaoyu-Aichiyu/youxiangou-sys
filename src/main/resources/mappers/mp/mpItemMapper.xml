<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<!-- namespace:命名空间，对应一个dao层接口的全路径 -->
<mapper namespace="com.qqls.youxiangousys.mp.dao.ItemDao">

    <select id="findSellItem" resultType="com.qqls.youxiangousys.sys.entity.SysItem">
        select * from t_item where item_sell = #{sellState}
    </select>


    <select id="findLikeItem" resultType="com.qqls.youxiangousys.sys.entity.SysItem">
        select * from t_item where item_state = 1
        <choose>
            <when test="likeItemType = '0'">
                order by rand(6)
            </when>
            <otherwise>
                and type_id = #{likeItemType}
            </otherwise>
        </choose>
    </select>

</mapper>